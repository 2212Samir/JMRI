                            </griditem>
                            <griditem gridx="11" gridy="1" anchor="CENTER">
                                <display item="Fn Map Shift F10" format="checkbox" label=""/>
                            </griditem>
                            <griditem gridx="12" gridy="1" anchor="CENTER">
                                <display item="Fn Map Shift F12" format="checkbox" label=""/>
                            </griditem>
                            <griditem gridx="13" gridy="1" anchor="CENTER">
                                <display item="Fn Map Shift F12" format="checkbox" label=""/>
                            </griditem>
                            <!--SUSI Function Key header-->
                            <griditem gridx="0" gridy="2" gridwidth="1" anchor="LINE_END"><label><text>F22</text></label></griditem>
                            <griditem gridx="1" gridy="2" gridwidth="1" anchor="CENTER"><label><text>F23</text></label></griditem>
                            <griditem gridx="2" gridy="2" gridwidth="1" anchor="CENTER"><label><text>F24</text></label></griditem>
                            <griditem gridx="3" gridy="2" gridwidth="1" anchor="CENTER"><label><text>F25</text></label></griditem>
                            <griditem gridx="4" gridy="2" gridwidth="1" anchor="CENTER"><label><text>F26</text></label></griditem>
                            <griditem gridx="5" gridy="2" gridwidth="1" anchor="CENTER"><label><text>F27</text></label></griditem>
                            <griditem gridx="6" gridy="2" gridwidth="1" anchor="CENTER"><label><text>F28</text></label></griditem>
                            <!--SUSI Function Key checkboxes-->
                            <griditem gridx="0" gridy="4" gridwidth="1" anchor="LINE_END">
                                <display item="SUSI F22" format="checkbox">
                                    <label>Activate in SUSI:</label>
                                    <label xml:lang="de">Aktiviere in SUSI:</label>
                                    <label xml:lang="nl">Activeer in SUSI:</label>
                                </display>
                            </griditem>
                            <griditem gridx="1" gridy="4" gridwidth="1" anchor="CENTER">
                                <display item="SUSI F23" format="checkbox" label=""/>
                            </griditem>
                            <griditem gridx="2" gridy="4" gridwidth="1" anchor="CENTER">
                                <display item="SUSI F24" format="checkbox" label=""/>
                            </griditem>
                            <griditem gridx="3" gridy="4" gridwidth="1" anchor="CENTER">
                                <display item="SUSI F25" format="checkbox" label=""/>
                            </griditem>
                            <griditem gridx="4" gridy="4" gridwidth="1" anchor="CENTER">
                                <display item="SUSI F26" format="checkbox" label=""/>
                            </griditem>
                            <griditem gridx="5" gridy="4" gridwidth="1" anchor="CENTER">
                                <display item="SUSI F27" format="checkbox" label=""/>
                            </griditem>
                            <griditem gridx="6" gridy="4" gridwidth="1" anchor="CENTER">
                                <display item="SUSI F28" format="checkbox" label=""/>
                            </griditem>
                            <!--end Grid-->
                        </grid>
                    </group>
                </row>
                <label><text>      </text></label>
