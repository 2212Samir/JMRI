    <name>IntelliDrive</name>
    <column>
        <row>
            <column>
                <display item="Advanced Function Mapping" format="checkbox"/>
                <label>
                    <text>Decoder Programming Lock</text>
                    <text xml:lang="de">Decoder Programmierschloss</text>
                    <text xml:lang="nl">Decoder Programmeerslot</text>
                </label>
                <display item="Decoder Lock ID"/>
                <display item="Decoder Lock Index"/>
                <label><text>      </text></label>
                <!-- CVs 50-51 -->
                <display item="Use Motorola 2" format="checkbox"/>
                <display item="Use Motorola 3" format="checkbox"/>
                <display item="Flip Light Outputs" format="checkbox"/>
                <display item="Light Frequency"/>
                <display item="SUSI1 Task"/>
                <display item="SUSI2 Task"/>
                <display item="A8 Function"/>
                <display item="Intellimatic" format="checkbox"/>
                <label><text>      </text></label>
                <display item="Motor Control" format="checkbox"/>
                <display item="Motor Control PIDSX"/>
                <display item="Dynamic Pulse Duration" format="checkbox"/>
                <label><text>      </text></label>
                <label>
                    <text>Motor Management Settings</text>
                    <text xml:lang="de">Motorregelung</text>
                    <text xml:lang="nl">Motorregeling</text>
                </label>
                <display item="Motor Management 1"/>
                <display item="Motor Management 2"/>
                <display item="Motor Management 3"/>
            </column>

            <column>
                <label>
                    <text>CV Banks</text>
                    <text xml:lang="de">CV Banken</text>
                </label>
                <separator/>
                <display item="Bank switch 1"/>
                <display item="Bank switch 2"/>
                <separator/>
                <row>
                    <group>
                        <qualifier>
                            <variableref>Bank switch 1</variableref>
                            <relation>eq</relation>
                            <value>8</value>
                        </qualifier>
                        <qualifier>
                            <variableref>Bank switch 2</variableref>
                            <relation>eq</relation>
                            <value>0</value>
                        </qualifier>
                        <column>
                            <label><text> </text></label>
                            <display item="Bank1 On1"/>
                            <display item="Bank1 On2"/>
                            <label><text> </text></label>
                        </column>
                        <column><label><text>      </text></label></column>
                        <column>
                            <label><text> </text></label>
                            <display item="Bank1 Off1"/>
                            <display item="Bank1 Off2"/>
                            <label><text> </text></label>
                        </column>
                    </group>
                </row>

                <row>
                    <group>
                        <qualifier>
                            <variableref>Bank switch 1</variableref>
                            <relation>eq</relation>
                            <value>8</value>
                        </qualifier>
                        <qualifier>
                            <variableref>Bank switch 2</variableref>
                            <relation>eq</relation>
                            <value>1</value>
                        </qualifier>
                        <column>
                            <label><text> </text></label>
                            <display item="Bank2 On1"/>
                            <display item="Bank2 On2"/>
                            <label><text> </text></label>
                        </column>
                        <column><label><text>      </text></label></column>
                        <column>
                            <label><text> </text></label>
                            <display item="Bank2 Off1"/>
                            <display item="Bank2 Off2"/>
                            <label><text> </text></label>
                        </column>
                    </group>
                </row>

                <row>
                    <group>
                        <qualifier>
                            <variableref>Bank switch 1</variableref>
                            <relation>eq</relation>
                            <value>8</value>
                        </qualifier>
                        <qualifier>
                            <variableref>Bank switch 2</variableref>
                            <relation>eq</relation>
                            <value>3</value>
                        </qualifier>
                        <column>
                            <label><text> </text></label>
                            <display item="Bank3 PWM Seq1.1"/>
                            <display item="Bank3 PWM Seq1.2"/>
                            <label><text> </text></label>
                        </column>
                        <column><label><text>      </text></label></column>
                        <column>
                            <label><text> </text></label>
                            <display item="Bank3 PWM Seq2.1"/>
                            <display item="Bank3 PWM Seq2.2"/>
                            <label><text> </text></label>
                        </column>
                    </group>
                </row>

                <row>
                    <group>
                        <qualifier>
                            <variableref>Bank switch 1</variableref>
                            <relation>eq</relation>
                            <value>8</value>
                        </qualifier>
                        <qualifier>
                            <variableref>Bank switch 2</variableref>
                            <relation>eq</relation>
                            <value>4</value>
                        </qualifier>
                        <column>
                            <label><text> </text></label>
                            <display item="Bank4 PWM Seq5.1"/>
                            <display item="Bank4 PWM Seq5.2"/>
                            <label><text> </text></label>
