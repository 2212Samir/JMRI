<decoder-config xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://jmri.org/xml/schema/decoder.xsd">
  <version author="Bob Jacobsen" version="1" lastUpdated="20150812"/>
  <!-- version 1 - test only -->
  <decoder>
    <family name="Hans De Loof LocoIO" mfg="Public-domain and DIY">
      <model model="Basic LocoIO"/>
    </family>
    <programming direct="no" paged="no" register="no" ops="no">
        <mode>LOCONETSV1MODE</mode>
    </programming>
    <variables>

     <!-- This sets a single JMRI-style composite address in two CVs -->
      <variable CV="1" comment="Board SV address" item="Short Address" default="81">
        <splitVal highCV="2" factor="1" offset="-256" default="1"/>
        <label>Board Address</label>
      </variable>

      <!-- This repurposes the UserID fields on the Basic pane to show -->
      <!-- the indivdual address bytes                                 -->
      <!-- Note defaults must be present both locations and agree      -->
      <variable item="User Id #1" CV="1" default="81">
        <decVal max="255"/>
            <label>Low (Main) Address</label>
      </variable>
      <variable item="User Id #2" CV="2" default="1">
        <decVal min="1" max="255"/>
            <label>High (Secondary) Address</label>
      </variable>

      <variable CV="3" item="Advanced Group 1 Option 1" default="192">
        <decVal/>
        <label>RB7 Configuration</label>
      </variable>
      <variable CV="4" item="Advanced Group 1 Option 2" default="1">
        <decVal/>
        <label>RB7 Value 1</label>
      </variable>
      <variable CV="5" item="Advanced Group 1 Option 3" default="0">
        <decVal/>
        <label>RB7 Value 2</label>
      </variable>

      <variable CV="3" item="Advanced Group 1 Option 4" default="192">
        <decVal/>
        <label>RB6 Configuration</label>
      </variable>
      <variable CV="4" item="Advanced Group 1 Option 5" default="1">
        <decVal/>
        <label>RB6 Value 1</label>
      </variable>
      <variable CV="5" item="Advanced Group 1 Option 6" default="32">
        <decVal/>
        <label>RB6 Value 2</label>
      </variable>


    </variables>
  </decoder>
</decoder-config>
